@using DobruskyCapitalLLC.MVC.Helpers;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#404040">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <title>@ViewData["Title"] | Dobrusky Capital LLC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DobruskyCapitalLLC.MVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div id="content">
        <header>
            <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 fixed-top @Html.HasScrollingNavbarTransition("Home", "Index")">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="@Url.Content("~/images/logo.png")" alt="Dobrusky Capital LLC Logo" style="height: 70px; margin-right: 10px; background-color:transparent;">
                        Dobrusky Capital LLC
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link text-light @Html.IsActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @Html.IsActive("Home", "Indicators")" asp-area="" asp-controller="Home" asp-action="Indicators">Indicators</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" target="_blank" href="https://www.amazon.com/Dobrusky-Capital-90-Day-Trading-Journal/dp/B0CPY3FJ39">Journal</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light @Html.IsActive("Home", "Contact")" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            @{
                if (ViewBag.Message != null)
                {
                    var alertType = ViewBag.Success != null && (bool)ViewBag.Success ? "alert-success" : "alert-danger";
                    <div id="alert" class="alert @alertType alert-dismissible fade show" role="alert">
                        @ViewBag.Message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
        </header>

        <div>
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer bg-dark text-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="@Url.Content("~/images/logo.png")" alt="Dobrusky Capital LLC Logo" class="footer-logo">
                    </a>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <p>Email: <a class="footer-link" style="text-decoration:none;" href="mailto:dobruskycapital@gmail.com" target="_blank">dobruskycapital@gmail.com</a></p>
                </div>
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <a href="#" class="text-light footer-link" style="margin:0px 5px 0px 5px;"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-light footer-link" style="margin:0px 5px 0px 5px;"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-light footer-link" style="margin:0px 5px 0px 5px;"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <hr />
            <div class="text-center mt-4">
                &copy; 2024 - Dobrusky Capital LLC - <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/767d71e18a.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
